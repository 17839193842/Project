<!--index.wxml-->
<view class="container">
  <!-- 顶部logo -->
  <view class="header">
    <view class="logo">
      <image src="{{logoUrl}}"></image>
    </view>
    <view class='logo-title'>{{logoTitle}}</view>
  </view>
  <!-- 产品列表 -->
  <view class='product-list'>
    <view class='product-category' bindtap='toProList'>
      {{category}}
      <view class='arrow'>></view>
    </view>
    <view class='product-items' wx:for="{{proList}}" wx:key="SysNo" data-id="{{item.SysNo}}" catchtap='toProDetail'>
      <image class='pro-img' src='{{item.ProductPicSrc200}}'></image>
      <text class='item-title'>{{item.ProductName}}</text>
      <text class='price-now'>￥{{item.CurrentPrice}}</text>
      <text class='price-old'>￥{{item.BasicPrice}}</text>
    </view>
    <view class='more' bindtap='toProList'>更多>></view>
  </view>
   <view class='show-all' bindtap='toProList'>{{showAll}}</view> 
</view>

