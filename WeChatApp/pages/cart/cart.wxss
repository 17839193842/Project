/* pages/cart/cart.wxss */
.cart-empty {
  height: 30rpx;
  margin: auto;
  color: #868686;
  font-size: 30rpx;
}

.cart-not-empty {
  margin: 25rpx auto;
  width: 100%;
  padding-bottom:25rpx; 
  background: #fff;
}

.cart-state {
  height: 100rpx;
  clear: both;
}

.select-all {
  float: left;
  display: block;
  padding:25rpx 30rpx;
}

.select-all .check {
  margin-top: 8rpx;
}

.select-all .no-check {
  margin-top: 8rpx;
}

.check {
  float: left;
  display: block;
}

.no-check {
  float: left;
  display: block;
  border: 1px solid #333333;
  border-radius: 100%;
}

.select-all text {
  float: left;
  display: block;
  padding-left: 30rpx;
}

.edit {
  float: right;
  display: block;
  padding:25rpx 30rpx;
}

.cart-list {
  width:100%;
  background: white;
  border-top: 1px solid #f5f5f5;
}

.cart-list-item {
  position:relative;
  display: flex;
  flex-direction: row;
  align-items: left;
  border-bottom: 1px solid #f5f5f5;
}

.cart-list .check {
  padding:25rpx 0 0 30rpx;
}

.cart-list .no-check {
  margin:25rpx 0 0 30rpx;
}

.cart-list .cart-list-a {
  padding:25rpx 0 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: left;
}

.cart-list .cart-list-a .cart-list-img {
  display: block;
  width:200rpx;
  height:200rpx;
}

.cart-list .cart-list-a .cart-list-text {
  display: flex;
  flex-direction: column;
  align-items: left;
  width: 60%;
  height: 200rpx;
  font-size: 30rpx;
  padding-left: 30rpx;
}

.cart-list .cart-list-a .cart-list-text .cart-list-title {
  padding-bottom: 10rpx;
}

.cart-list .cart-list-a .cart-list-text .cart-list-price {
  font-size: 32rpx;
  color: orange;
}

.cart-list .cart-list-a .cart-list-text .cart-list-num {
  padding-left: 20rpx;
  color: gray;
}

.cart-list .cart-list-a .cart-list-cnt {
  display: flex;
  flex-direction: row;
  align-items: center;
  position:absolute;
  bottom: 15rpx;
  right: 30rpx;
}

.cart-list .cart-list-a .cart-list-cnt .cart-list-minus {
  height: 50rpx;
  background: #f5f5f5;
  margin: 0 0 0 10rpx;
  padding: 0 20rpx;
}

.minus-disable {
  color: gainsboro;
}

.cart-list .cart-list-a .cart-list-cnt .int {
  width: 40rpx;
  height: 50rpx;
  background: #f5f5f5;
  margin: 0 0 0 10rpx;
  padding: 0 0 0 20rpx;
}

.cart-list .cart-list-a .cart-list-cnt .cart-list-plus {
  height: 50rpx;
  background: #f5f5f5;
  margin: 0 0 0 10rpx;
  padding: 0 20rpx;
}

.cart-bottom {
  width: 100%;
  position: fixed;
  bottom: 0;
  background: white;
  z-index: 2;
}

.cart-bottom .cart-bottom-word {
  margin: 25rpx 0;
  float: right;
  text-align: right;
}

.cart-bottom .cart-bottom-word .total {
  display: block;
  color: orange;
  font-size: 32rpx;
}

.cart-bottom .cart-bottom-word .hints {
  display: block;
  font-size: 30rpx;
}

.cart-bottom .buy-now {
  margin: 25rpx 30rpx;
  display: block;
  float: right;
}

.buy-now-active {
  color: white;
  background: orange;
}

.cart-delete {
  width: 100%;
  position: fixed;
  bottom: 0;
  background: white;
}

.cart-delete-active {
  z-index: 3;
}

.cart-delete .delete {
  margin: 25rpx 30rpx;
  display: block;
  float: right;
  padding: 0 58rpx;
}

.delete-active {
  color: white;
  background: orange;
}
button::after{
  border: none;
}